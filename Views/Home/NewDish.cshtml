@{
    ViewData["Title"] = "Add Dish";
}
<style>
    span {
        color: red;
        font-size: small;
    }
</style>

@model Dish
<div class="container pt-4">
    <div class="row text-center">
        <div class="col-1"></div>
        <div class="col">
            <h2>Add a New Dish!</h2>
        </div>
        <div class="col-1">
            <a href="/" class="btn btn-outline-info">Home</a>
        </div>
    </div>
</div>
<div class="container pt-5">
    <form asp-action="AddDish" asp-controller="Home" method="post">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <div class="form-group py-2">
                    <label asp-for="ChefId"></label>
                    <span asp-validation-for="ChefId"></span>
                    <select asp-for="ChefId" class="text-right">
                        @foreach (var chef in @ViewBag.AllChefs)
                        {
                            <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>   
                        }
                    </select>
                </div>
                <div class="form-group py-2">
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name"></span>
                    <input asp-for="Name" class="form-control">
                </div>
                <div class="form-group py-2">
                    <label asp-for="Calories"></label>
                    <span asp-validation-for="Calories"></span>
                    <input asp-for="Calories" class="form-control">
                </div>
                <div class="form-group py-2">
                    <label asp-for="Tastiness"></label>
                    <span asp-validation-for="Tastiness"></span>
                    <select asp-for="Tastiness">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description"></span>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Add Dish</button>
            </div>
        <div class="col-4"></div>
        </div>
    </form>

</div>
